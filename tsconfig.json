{
  "compilerOptions": {
    "outDir": "./dist",
    "lib": [
      "ES2022",
      "dom"
    ],
    "target": "esnext",
    "module": "esnext",
    "alwaysStrict": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true /* Disallow inconsistently-cased references to the same file. */
  },
  "include": [
    "./src"
  ]
}